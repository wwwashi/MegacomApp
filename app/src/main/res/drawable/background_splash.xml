<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="35"
                android:startColor="#284A94"
                android:endColor="#3489CF"
                android:type="linear"/>
